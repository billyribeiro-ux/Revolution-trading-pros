# Revolution Trading Pros - Rust API Environment Variables
# Copy this file to .env and fill in your values

# Environment
ENVIRONMENT=development

# Database (Neon PostgreSQL)
DATABASE_URL=postgres://user:password@ep-xxx.us-east-2.aws.neon.tech/neondb?sslmode=require

# Redis (Upstash)
REDIS_URL=rediss://default:xxx@xxx.upstash.io:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters
JWT_ISSUER=revolution-trading-pros
JWT_AUDIENCE=revolution-trading-pros-api

# Stripe
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Postmark Email
POSTMARK_API_KEY=xxx

# Meilisearch
MEILISEARCH_URL=https://xxx.meilisearch.io
MEILISEARCH_API_KEY=xxx

# Cloudflare R2 Storage
R2_ACCOUNT_ID=xxx
R2_ACCESS_KEY_ID=xxx
R2_SECRET_ACCESS_KEY=xxx
R2_BUCKET_NAME=revolution-trading-media
R2_PUBLIC_URL=https://pub-xxx.r2.dev

# Site URL (for email links, etc.)
SITE_URL=https://revolutiontradingpros.com

# CORS Origins (comma-separated)
CORS_ORIGINS=https://revolution-trading-pros.pages.dev,https://revolutiontradingpros.com,http://localhost:5173
