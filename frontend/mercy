    <div class="dashboard">
        
        <!-- PANEL 1: Still visible -->
        <aside class="dashboard__sidebar">
            <nav class="dashboard__nav-primary">
                <!-- Same navigation content -->
            </nav>
        </aside>
        
        <!-- MAIN CONTENT -->
        <main class="dashboard__main">
            <header class="dashboard__header">
                <h1>Mastering the Trade</h1>
            </header>
            
