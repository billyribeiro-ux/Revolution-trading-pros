                <!-- No .page-id-401190 class, so display: none doesn't apply -->
                <aside class="dashboard__content-sidebar">
                    <section class="content-sidebar__section">
                        <h3 class="content-sidebar__heading">Navigation</h3>
                        <ul>
                            <li><a href="/dashboard/mastering-the-trade">Overview</a></li>
                            <li><a href="/dashboard/mastering-the-trade/lessons">Lessons</a></li>
                            <li><a href="/dashboard/mastering-the-trade/videos">Videos</a></li>
                            <li><a href="/dashboard/mastering-the-trade/resources">Resources</a></li>
