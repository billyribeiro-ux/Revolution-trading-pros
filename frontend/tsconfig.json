{
	// ICT 11+: Extend SvelteKit generated types for proper type checking
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		// ═══════════════════════════════════════════════════════════════════════════
		// APPLE ICT11+ PRINCIPAL ENGINEER - MAXIMUM TYPE SAFETY CONFIGURATION
		// Level: Staff/Principal Engineer - Zero-Defect Production Standards
		// ═══════════════════════════════════════════════════════════════════════════

		// Module Resolution - Modern ESM Standards
		"moduleResolution": "bundler",
		"module": "ESNext",
		"target": "ES2022",
		"lib": ["ES2022", "DOM", "DOM.Iterable"],

		// SvelteKit Specific
		"allowImportingTsExtensions": true,
		"allowArbitraryExtensions": true,
		"noEmit": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,

		// ═══════════════════════════════════════════════════════════════════════════
		// CORE STRICT MODE - ALL ENABLED (ICT11+ Standard)
		// ═══════════════════════════════════════════════════════════════════════════
		"strict": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictBindCallApply": true,
		"strictPropertyInitialization": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"alwaysStrict": true,

		// ═══════════════════════════════════════════════════════════════════════════
		// ADDITIONAL STRICT CHECKS - MAXIMUM SAFETY (ICT11+ Standard)
		// ═══════════════════════════════════════════════════════════════════════════
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": false,
		"noImplicitOverride": true,
		"noPropertyAccessFromIndexSignature": false,
		"allowUnusedLabels": false,
		"allowUnreachableCode": false,
		"exactOptionalPropertyTypes": false,
		// ICT 11+: Disabled because Svelte templates use variables that TypeScript can't detect
		// Variables bound in templates (bind:this, {#each}) appear "unused" to TypeScript
		"noUnusedLocals": false,
		"noUnusedParameters": false,

		// ═══════════════════════════════════════════════════════════════════════════
		// TYPE SAFETY ENHANCEMENTS - CATCH ALL EDGE CASES
		// ═══════════════════════════════════════════════════════════════════════════
		"useUnknownInCatchVariables": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true, // ICT11+: Skip third-party lib type validation for faster builds

		// ═══════════════════════════════════════════════════════════════════════════
		// CODE QUALITY & MAINTAINABILITY
		// ═══════════════════════════════════════════════════════════════════════════
		"noEmitOnError": true,
		"preserveConstEnums": true,
		"removeComments": false,
		"sourceMap": true,
		"declaration": false,
		"declarationMap": false

		// PATH MAPPINGS: Defined in svelte.config.js kit.alias
		// SvelteKit auto-generates these in .svelte-kit/tsconfig.json
	},
	"include": [
		"src/**/*",
		"src/**/*.svelte",
		".svelte-kit/ambient.d.ts",
		".svelte-kit/non-ambient.d.ts"
	],
	"exclude": [
		"node_modules",
		"build",
		"dist",
		".svelte-kit",
		"**/*.spec.ts",
		"**/*.test.ts",
		"Do's/**/*"
	]
}
