{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"moduleResolution": "bundler",
		"module": "ESNext",
		"target": "ESNext",
		"allowImportingTsExtensions": true,
		"allowArbitraryExtensions": true,
		"skipLibCheck": true,
		"noEmit": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM", "DOM.Iterable"],

		// ═══════════════════════════════════════════════════════════════════════════
		// ENTERPRISE STRICT MODE CONFIGURATION
		// Level: ICT11+ Principal Engineer - Production Ready
		// ═══════════════════════════════════════════════════════════════════════════

		// Core strict settings - Production Ready - ICT11+ FULL STRICT MODE
		"strict": true,
		"strictNullChecks": true,  // ENABLED: Catch null/undefined errors
		"strictFunctionTypes": true,
		"strictBindCallApply": true,
		"strictPropertyInitialization": true,  // ENABLED: Ensure class properties initialized
		"noImplicitAny": true,  // ENABLED: No implicit any types allowed
		"noImplicitThis": true,

		// Additional strict checks
		"noImplicitReturns": false,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": false,
		// Disabled: causes issues with optional params in function calls
		"exactOptionalPropertyTypes": false,

		// Code quality - warnings handled by ESLint
		"noUnusedLocals": false,
		"noUnusedParameters": false,

		// Type safety enhancements
		"useUnknownInCatchVariables": true,
		// Disabled: env variables use index signatures
		"noPropertyAccessFromIndexSignature": false,

		// Source maps only - no declaration files needed with noEmit
		"sourceMap": true
	},
	"include": ["src/**/*", "src/**/*.svelte", ".svelte-kit/ambient.d.ts", ".svelte-kit/non-ambient.d.ts"],
	"exclude": ["node_modules", "build", "dist"]
}
