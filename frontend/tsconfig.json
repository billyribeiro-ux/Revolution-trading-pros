{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"types": ["svelte", "@sveltejs/kit"],
		"moduleResolution": "bundler",
		"module": "ESNext",
		"target": "ESNext",
		"allowImportingTsExtensions": true,
		"allowArbitraryExtensions": true,
		"skipLibCheck": true,
		"noEmit": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"baseUrl": ".",
		"paths": {
			"$lib": ["src/lib"],
			"$lib/*": ["src/lib/*"],
			"$app/*": ["node_modules/@sveltejs/kit/src/runtime/app/*"],
			"$env/*": ["node_modules/@sveltejs/kit/src/runtime/env/*"]
		},

		// ═══════════════════════════════════════════════════════════════════════════
		// ENTERPRISE STRICT MODE CONFIGURATION
		// Level: ICT11+ Principal Engineer - Production Ready
		// ═══════════════════════════════════════════════════════════════════════════

		// Core strict settings - Production Ready
		"strict": true,
		// Disabled: Too many false positives with optional chaining patterns
		"strictNullChecks": false,
		"strictFunctionTypes": true,
		"strictBindCallApply": true,
		"strictPropertyInitialization": false,
		// Disabled: Svelte event handlers in templates don't need explicit types
		"noImplicitAny": false,
		"noImplicitThis": true,

		// Additional strict checks
		"noImplicitReturns": false,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": false,
		// Disabled: causes issues with optional params in function calls
		"exactOptionalPropertyTypes": false,

		// Code quality - warnings handled by ESLint
		"noUnusedLocals": false,
		"noUnusedParameters": false,

		// Type safety enhancements
		"useUnknownInCatchVariables": true,
		// Disabled: env variables use index signatures
		"noPropertyAccessFromIndexSignature": false,

		// Source maps only - no declaration files needed with noEmit
		"sourceMap": true
	},
	"include": ["src/**/*", "src/**/*.svelte"],
	"exclude": ["node_modules", ".svelte-kit", "build", "dist"]
}
