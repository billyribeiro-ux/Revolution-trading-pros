{
	// Temporarily commented out until .svelte-kit is generated by running: npm run dev or npx svelte-kit sync
	// "extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		// ═══════════════════════════════════════════════════════════════════════════
		// APPLE ICT11+ PRINCIPAL ENGINEER - MAXIMUM TYPE SAFETY CONFIGURATION
		// Level: Staff/Principal Engineer - Zero-Defect Production Standards
		// ═══════════════════════════════════════════════════════════════════════════

		// Module Resolution - Modern ESM Standards
		"moduleResolution": "bundler",
		"module": "ESNext",
		"target": "ES2022",
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		
		// SvelteKit Specific
		"allowImportingTsExtensions": true,
		"allowArbitraryExtensions": true,
		"noEmit": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		
		// ═══════════════════════════════════════════════════════════════════════════
		// CORE STRICT MODE - ALL ENABLED (ICT11+ Standard)
		// ═══════════════════════════════════════════════════════════════════════════
		"strict": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictBindCallApply": true,
		"strictPropertyInitialization": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"alwaysStrict": true,

		// ═══════════════════════════════════════════════════════════════════════════
		// ADDITIONAL STRICT CHECKS - MAXIMUM SAFETY (ICT11+ Standard)
		// ═══════════════════════════════════════════════════════════════════════════
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,
		"noPropertyAccessFromIndexSignature": true,
		"allowUnusedLabels": false,
		"allowUnreachableCode": false,
		"exactOptionalPropertyTypes": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,

		// ═══════════════════════════════════════════════════════════════════════════
		// TYPE SAFETY ENHANCEMENTS - CATCH ALL EDGE CASES
		// ═══════════════════════════════════════════════════════════════════════════
		"useUnknownInCatchVariables": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": false,  // ICT11+: Validate all type definitions
		
		// ═══════════════════════════════════════════════════════════════════════════
		// CODE QUALITY & MAINTAINABILITY
		// ═══════════════════════════════════════════════════════════════════════════
		"noEmitOnError": true,
		"preserveConstEnums": true,
		"removeComments": false,
		"sourceMap": true,
		"declaration": false,
		"declarationMap": false,

		// ═══════════════════════════════════════════════════════════════════════════
		// PATH MAPPINGS - SvelteKit Aliases
		// ═══════════════════════════════════════════════════════════════════════════
		"baseUrl": ".",
		"paths": {
			"$lib": ["src/lib"],
			"$lib/*": ["src/lib/*"],
			"$app/*": ["node_modules/@sveltejs/kit/src/runtime/app/*"],
			"$components": ["src/lib/components"],
			"$components/*": ["src/lib/components/*"],
			"$stores": ["src/lib/stores"],
			"$stores/*": ["src/lib/stores/*"],
			"$utils": ["src/lib/utils"],
			"$utils/*": ["src/lib/utils/*"],
			"$api": ["src/lib/api"],
			"$api/*": ["src/lib/api/*"]
		}
	},
	"include": [
		"src/**/*",
		"src/**/*.svelte",
		".svelte-kit/ambient.d.ts",
		".svelte-kit/non-ambient.d.ts"
	],
	"exclude": [
		"node_modules",
		"build",
		"dist",
		".svelte-kit",
		"**/*.spec.ts",
		"**/*.test.ts"
	]
}
