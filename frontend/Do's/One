<!-- ═══════════════════════════════════════════════════════════════════════════
     JAVASCRIPT FOR TOGGLE FUNCTIONALITY
     ═══════════════════════════════════════════════════════════════════════════ -->

<script>
// Toggle sidebar on mobile
document.querySelectorAll('[data-toggle-dashboard-menu]').forEach(function(element) {
    element.addEventListener('click', function() {
        const sidebar = document.querySelector('.dashboard__sidebar');
        const overlay = document.querySelector('.dashboard__overlay');
        
        sidebar.classList.toggle('is-active');
        overlay.classList.toggle('is-active');
    });
});

// Close sidebar when clicking overlay
document.querySelector('.dashboard__overlay')?.addEventListener('click', function() {
    const sidebar = document.querySelector('.dashboard__sidebar');
    const overlay = document.querySelector('.dashboard__overlay');
    
    sidebar.classList.remove('is-active');
    overlay.classList.remove('is-active');
});
</script>

