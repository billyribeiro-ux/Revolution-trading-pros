<!-- ═══════════════════════════════════════════════════════════════════════════
     JAVASCRIPT - COLLAPSE/EXPAND FUNCTIONALITY
     ═══════════════════════════════════════════════════════════════════════════ -->

<script>
document.addEventListener('DOMContentLoaded', function() {
    const collapseBtn = document.getElementById('collapseBtn');
    const mainSidebar = document.getElementById('mainSidebar');
    const secondarySidebar = document.getElementById('secondarySidebar');
    
    // Toggle collapse on button click
    collapseBtn.addEventListener('click', function() {
        mainSidebar.classList.toggle('is-collapsed');
        
        // Save state to localStorage
        if (mainSidebar.classList.contains('is-collapsed')) {
            localStorage.setItem('sidebarCollapsed', 'true');
        } else {
            localStorage.setItem('sidebarCollapsed', 'false');
        }
    });
    
    // Restore collapsed state from localStorage
    const isCollapsed = localStorage.getItem('sidebarCollapsed') === 'true';
    if (isCollapsed) {
        mainSidebar.classList.add('is-collapsed');
    }
    
    // Show secondary sidebar on hover when main sidebar is collapsed
    mainSidebar.addEventListener('mouseenter', function() {
        if (mainSidebar.classList.contains('is-collapsed')) {
            secondarySidebar.style.pointerEvents = 'auto';
        }
    });
    
    mainSidebar.addEventListener('mouseleave', function() {
        setTimeout(function() {
            if (!secondarySidebar.matches(':hover')) {
                secondarySidebar.style.pointerEvents = 'none';
            }
        }, 100);
    });
    
    secondarySidebar.addEventListener('mouseleave', function() {
        secondarySidebar.style.pointerEvents = 'none';
    });
});
</script>

</body>
</html>

<!-- ═══════════════════════════════════════════════════════════════════════════
     TECHNICAL SPECIFICATIONS
     ═══════════════════════════════════════════════════════════════════════════
     
     SIDEBAR COLLAPSE SYSTEM:
     - Default Width: 280px
     - Collapsed Width: 80px
     - Transition: 0.3s cubic-bezier(0.4, 0, 0.2, 1)
     - Persists state in localStorage
     
     SECONDARY SIDEBAR:
     - Width: 280px
     - Position: Fixed at left: 80px
     - Shows on hover when main sidebar is collapsed
     - Smooth fade-in with transform animation
     - Z-index: 99 (below main sidebar)
     
     MAIN CONTENT ADJUSTMENT:
     - Default margin-left: 280px
     - Collapsed margin-left: 80px
     - Smooth transition matches sidebar animation
     
     COLORS:
     - Main Sidebar BG: #0a2335
     - Secondary Sidebar BG: #0d2d45
     - Content BG: #efefef
     - Section BG: #ffffff
     - Active Border: #0984ae
     
     ANIMATIONS:
     - Sidebar width: 0.3s cubic-bezier
     - Text opacity: 0.3s ease
     - Icon rotation: 0.3s ease
     - Card hover: 0.3s ease
     - Secondary sidebar: 0.3s ease
     
     ═══════════════════════════════════════════════════════════════════════════ -->
