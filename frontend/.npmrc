# Revolution Trading Pros - npm Configuration
# ICT 7 Principal Engineer Standards

# Engine strict disabled - camera-controls requires Node 22+ but we use Node 20 LTS
# The package works fine on Node 20, just has overly strict engine requirement
engine-strict=false

# Use exact versions for reproducible builds
save-exact=true

# Allow legacy peer deps to handle transitive dependency conflicts
# Required for @fortawesome/svelte-fontawesome and other packages with outdated peer deps
legacy-peer-deps=true

# Ensure npm uses the correct registry
registry=https://registry.npmjs.org/
