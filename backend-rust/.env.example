# Revolution Trading Pros - Rust API Configuration
# ICT 11+ Principal Engineer Grade

# =============================================================================
# APPLICATION
# =============================================================================
APP_NAME="Revolution Trading Pros API"
APP_ENV=development
APP_DEBUG=true
RUST_LOG=info,sqlx=warn,tower_http=debug

# =============================================================================
# SERVER
# =============================================================================
HOST=0.0.0.0
PORT=8080

# =============================================================================
# DATABASE (Fly Postgres)
# ICT 11+: Use Fly Postgres for lowest latency in production
# Local: postgres://user:password@localhost:5432/revolution_trading_pros
# Production: postgres://postgres:password@revolution-db.flycast:5432/postgres
# =============================================================================
DATABASE_URL=postgres://user:password@localhost:5432/revolution_trading_pros
DATABASE_MAX_CONNECTIONS=100
DATABASE_MIN_CONNECTIONS=10

# =============================================================================
# REDIS
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
JWT_ACCESS_TOKEN_EXPIRES_IN=15m
JWT_REFRESH_TOKEN_EXPIRES_IN=7d
JWT_ISSUER=revolution-trading-pros

# =============================================================================
# STRIPE
# =============================================================================
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# =============================================================================
# EMAIL (SMTP)
# =============================================================================
SMTP_HOST=smtp.postmarkapp.com
SMTP_PORT=587
SMTP_USERNAME=your-postmark-api-key
SMTP_PASSWORD=your-postmark-api-key
SMTP_FROM_EMAIL=noreply@revolutiontradingpros.com
SMTP_FROM_NAME="Revolution Trading Pros"

# =============================================================================
# CORS
# =============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:5173,https://revolutiontradingpros.com
CORS_MAX_AGE=3600

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# =============================================================================
# FRONTEND URL (for emails, redirects)
# =============================================================================
FRONTEND_URL=http://localhost:5173

# =============================================================================
# FLY.IO DEPLOYMENT
# =============================================================================
FLY_APP_NAME=revolution-trading-pros-api
PRIMARY_REGION=iad
