###############################################################################
# REVOLUTION TRADING PROS - PRODUCTION CONFIGURATION
#
# Stack: Laravel 12 + Octane + FrankenPHP (December 2025)
#
# Set these in Railway Dashboard â†’ Variables
# NEVER commit actual values to version control!
###############################################################################

#------------------------------------------------------------------------------
# APPLICATION
#------------------------------------------------------------------------------
APP_NAME="Revolution Trading Pros"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://revolution-trading-pros.fly.dev
APP_KEY=base64:GENERATE_WITH_PHP_ARTISAN_KEY_GENERATE

#------------------------------------------------------------------------------
# OCTANE + FRANKENPHP (Sub-millisecond response times)
#------------------------------------------------------------------------------
OCTANE_SERVER=frankenphp
OCTANE_WORKERS=auto
OCTANE_TASK_WORKERS=auto
OCTANE_MAX_REQUESTS=1000
OCTANE_HTTPS=false
OCTANE_CACHE_ENABLED=true
OCTANE_PERSISTENT_DB=true

#------------------------------------------------------------------------------
# DATABASE - Neon PostgreSQL
#------------------------------------------------------------------------------
# Get from: https://console.neon.tech
# Format: postgres://user:pass@ep-xxx.us-east-2.aws.neon.tech/neondb?sslmode=require
DATABASE_URL=

# Alternative individual settings:
DB_CONNECTION=pgsql
# DB_HOST=ep-xxx.us-east-2.aws.neon.tech
# DB_PORT=5432
# DB_DATABASE=neondb
# DB_USERNAME=
# DB_PASSWORD=

#------------------------------------------------------------------------------
# CACHE - Upstash Redis
#------------------------------------------------------------------------------
# Get from: https://console.upstash.com
# Format: rediss://default:xxx@xxx.upstash.io:6379
REDIS_URL=

CACHE_STORE=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis
REDIS_CLIENT=predis

#------------------------------------------------------------------------------
# STORAGE - Cloudflare R2 (Already configured)
#------------------------------------------------------------------------------
FILESYSTEM_DISK=r2
MEDIA_DISK=r2

R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET=revolution-trading-media
R2_ENDPOINT=https://YOUR_ACCOUNT_ID.r2.cloudflarestorage.com
R2_PUBLIC_URL=https://pub-a6d59af18a9645e6a7b38dca4d53f2af.r2.dev

#------------------------------------------------------------------------------
# EMAIL - Postmark
#------------------------------------------------------------------------------
# Get from: https://postmarkapp.com
MAIL_MAILER=postmark
POSTMARK_TOKEN=
MAIL_FROM_ADDRESS=noreply@revolutiontradingpros.com
MAIL_FROM_NAME="${APP_NAME}"

#------------------------------------------------------------------------------
# PAYMENTS - Stripe
#------------------------------------------------------------------------------
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_KEY=pk_live_
STRIPE_SECRET=sk_live_
STRIPE_WEBHOOK_SECRET=whsec_

#------------------------------------------------------------------------------
# MONITORING - Sentry
#------------------------------------------------------------------------------
# Get from: https://sentry.io
SENTRY_LARAVEL_DSN=

#------------------------------------------------------------------------------
# PULSE - Performance Monitoring
#------------------------------------------------------------------------------
PULSE_ENABLED=true
PULSE_PATH=pulse
PULSE_STORAGE_DRIVER=database
PULSE_INGEST_DRIVER=storage

#------------------------------------------------------------------------------
# HORIZON - Queue Dashboard
#------------------------------------------------------------------------------
HORIZON_PATH=horizon
HORIZON_PREFIX=rtp_horizon:

#------------------------------------------------------------------------------
# REVERB - WebSocket Server (Optional)
#------------------------------------------------------------------------------
BROADCAST_CONNECTION=reverb
REVERB_APP_ID=revolution-trading
REVERB_APP_KEY=
REVERB_APP_SECRET=
REVERB_HOST=revolution-trading-pros.fly.dev
REVERB_PORT=443
REVERB_SCHEME=https

#------------------------------------------------------------------------------
# SECURITY
#------------------------------------------------------------------------------
BCRYPT_ROUNDS=12
SESSION_ENCRYPT=true
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

CORS_ALLOWED_ORIGINS=https://revolution-trading-pros.pages.dev,https://revolutiontradingpros.com,https://revolution-trading-pros.fly.dev
SANCTUM_STATEFUL_DOMAINS=revolution-trading-pros.pages.dev,revolutiontradingpros.com,revolution-trading-pros.fly.dev

#------------------------------------------------------------------------------
# LOGGING
#------------------------------------------------------------------------------
LOG_CHANNEL=stderr
LOG_LEVEL=error

#------------------------------------------------------------------------------
# SEARCH (Optional)
#------------------------------------------------------------------------------
SCOUT_DRIVER=database
# MEILISEARCH_HOST=
# MEILISEARCH_KEY=
